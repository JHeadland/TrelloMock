<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.example.trellomock.TeamSettingsController">
   <children>
       <GridPane alignment="center" hgap="10" prefHeight="600" prefWidth="800" vgap="10">
   
           <padding>
            <Insets bottom="25" left="25" right="25" top="25" />
         </padding>
          <children>
      
              <Text fx:id="teamHeader" text="" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.rowSpan="1" />
      
              <Label text="Change Team:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      
              <ComboBox fx:id="teamComboBox" promptText="Select Team" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      
              <Label text="Change Team Name:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
      
              <TextField fx:id="teamNameField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      
              <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
         <children>
                     <Button onAction="#clickCancelButton" text="Cancel" />
                     <Button onAction="#clickChangeButton" text="Confirm Changes" />
         </children>
              </HBox>
          </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
   
       </GridPane>
       <Button onAction="#clickLogoutButton" text="Log Out" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" />
       <Text fx:id="deleteWarning" textAlignment="RIGHT" AnchorPane.bottomAnchor="50" AnchorPane.rightAnchor="20" />
       <Button onAction="#HandleAddTaskClicked" text="Add Team" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="150.0" />
       <Button onAction="#clickDeleteButton" text="Delete Team" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20" />
   </children>
</AnchorPane>
